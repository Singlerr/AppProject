<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"

        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp"
            android:fontFamily="@font/nscjk_medium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:text="@string/setting"
            android:textColor="#595959"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/nscjk_medium"
            app:backgroundTint="#FFFFFF" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_background2"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:background="#00ff0000"
            android:drawableStart="@android:drawable/ic_input_get"
            android:text="@string/store"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@font/nscjk_medium"
            app:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/nscjk_medium"
            android:lines="2"
            android:maxLines="10"
            android:text="지금 이 시간,\n 혼밥탈출하기 딱 좋은 시간"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:id="@+id/bar_1"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_2"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_3"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_4"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_9"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_5"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_6"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_7"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_8"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_10"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <View
            android:id="@+id/bar_11"
            android:layout_width="90dp"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round" />

        <Button
            android:id="@+id/btn_startMatching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/button_rounded_high"
            android:fontFamily="@font/nscjk_bold"
            android:insetLeft="0dp"
            android:text="@string/Matching"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:backgroundTint="@color/mainColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="7px"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:background="#e9e9e9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/nscjk_medium"
            android:text="@string/explain1"
            android:textAlignment="center"
            android:textColor="#737373" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nscjk_medium"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:minWidth="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/sex"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textStyle="normal" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="87dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:buttonTint="@color/mainColor"
                        android:fontFamily="@font/nscjk_medium"
                        android:text="@string/all"
                        android:textColor="#827717" />

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:buttonTint="@color/mainColor"
                        android:fontFamily="@font/nscjk_medium"
                        android:text="@string/woman"
                        android:textColor="#827717" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:buttonTint="@color/mainColor"
                        android:fontFamily="@font/nscjk_medium"
                        android:text="@string/man"
                        android:textColor="#827717" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nscjk_medium"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:minWidth="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/age"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0.13"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <Button
                        android:id="@+id/btn_age_random"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rounded_high"
                        android:backgroundTint="#fde9cb"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:minHeight="0dp"
                        android:paddingTop="0dp"
                        android:text="@string/age1"
                        android:textColor="#827717" />

                    <Button
                        android:id="@+id/btn_age_1"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#fde9cb"
                        android:background="@drawable/button_rounded_high"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:minHeight="0dp"
                        android:paddingTop="0dp"
                        android:text="@string/age2"
                        android:textColor="#827717" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nscjk_medium"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:minWidth="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/age"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/transparent"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0.13"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <Button
                        android:id="@+id/btn_age_2"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rounded_high"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:minHeight="0dp"
                        android:backgroundTint="#fde9cb"
                        android:paddingTop="0dp"
                        android:text="@string/age3"
                        android:textColor="#827717" />

                    <Button
                        android:id="@+id/btn_age_3"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#fde9cb"
                        android:background="@drawable/button_rounded_high"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:minHeight="0dp"
                        android:paddingTop="0dp"
                        android:text="@string/age4"
                        android:textColor="#827717" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

