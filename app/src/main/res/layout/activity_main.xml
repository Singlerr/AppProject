<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="bottom"
    app:umanoDragView="@id/drawer"
    app:umanoOverlay="true"
    app:umanoPanelHeight="125dp"
    app:umanoShadowHeight="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImg"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nscjk_medium"
                android:gravity="center"
                android:text="@string/title"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nscjk_medium"
                android:text="@string/setting"
                android:textColor="#595959"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="#FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/nscjk_medium"
                android:lines="2"
                android:maxLines="10"
                android:text="지금 이 시간,\n 혼밥탈출하기 딱 좋은 시간"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:id="@+id/bar_1"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_2"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_3"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_4"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_9"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_5"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_6"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_7"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_8"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_10"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <View
                android:id="@+id/bar_11"
                android:layout_width="90dp"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/round" />

            <Button
                android:id="@+id/btn_startMatching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/button_rounded_high_unclicked"
                android:fontFamily="@font/nscjk_bold"
                android:insetLeft="0dp"
                android:text="@string/Matching"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:backgroundTint="@color/mainColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7px"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:background="#e9e9e9" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:fontFamily="@font/nscjk_medium"
                android:text="@string/explain1"
                android:textAlignment="center"
                android:textColor="#737373" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="선호 성별"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_sex_all"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/button_rounded_high_unclicked"

                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="모두"
                        android:textColor="#987949" />

                    <Button
                        android:id="@+id/btn_sex_male"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_rounded_high_unclicked"

                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="남자"
                        android:textColor="#987949" />

                    <Button
                        android:id="@+id/btn_sex_female"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_rounded_high_unclicked"

                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="여자"
                        android:textColor="#987949" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="선호 나이"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_age_random"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/button_rounded_high_unclicked"

                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="랜덤"
                        android:textColor="#987949" />

                    <Button
                        android:id="@+id/btn_age_1"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_rounded_high_unclicked"

                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="20~25세"
                        android:textColor="#987949" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="선호 나이"
                        android:textColor="@android:color/transparent" />

                    <Button
                        android:id="@+id/btn_age_2"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/button_rounded_high_unclicked"
                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="26~30세"
                        android:textColor="#987949" />

                    <Button
                        android:id="@+id/btn_age_3"
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_rounded_high_unclicked"

                        android:fontFamily="@font/nscjk_medium"
                        android:includeFontPadding="false"
                        android:text="30세 이상"
                        android:textColor="#987949" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/slide_background"
        android:orientation="vertical">

        <View
            android:id="@+id/swipe"
            android:layout_width="75dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/slide_bar" />

        <ListView
            android:id="@+id/rstView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></ListView>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>