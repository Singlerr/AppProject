<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    tools:context=".ProfileSettingActivity">

    <TextView
        android:id="@+id/tv_profileSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 설정"
        android:textColor="#FFC107"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />

    <TextView
        android:id="@+id/tv_insertPictureExplain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업로드한 사진은 승인 후 설정됩니다. 얼굴이 잘 보이는 사진을\n등록해주세요. 다음과 같은 사진은 승인되지 않으니 주의해 주세요."
        android:textColor="#3C3B3B"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <TextView
        android:id="@+id/tv_insertPictureExplain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 얼굴이 보이지 않는 사진.\n- 마스크, 선글라스 등 착용 사진.\n- 선명하지 않거나 흐린 사진"
        android:textColor="#888888"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_insertPictureExplain1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_profileSettingText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진"
        android:textColor="#070707"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profileSettingTitle"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/tv_profileSettingText2"
        android:layout_width="59dp"
        android:layout_height="36dp"
        android:text="닉네임"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_insertPictureExplain2"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/tv_profileSettingText3"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:text=" 생년월일"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_insertPictureExplain2"
        app:layout_constraintVertical_bias="0.265" />

    <TextView
        android:id="@+id/tv_profileSettingText4"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:text="성별"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_insertPictureExplain2"
        app:layout_constraintVertical_bias="0.472" />

    <EditText
        android:id="@+id/etv_profileSettingNickName"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="  닉네임을 입력해주세요"
        android:inputType="textPersonName"
        android:paddingEnd="12dp"
        android:textColorHint="#C8C4C4"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/tv_profileSettingText2"
        app:layout_constraintTop_toBottomOf="@+id/tv_insertPictureExplain2"
        app:layout_constraintVertical_bias="0.064" />

    <EditText
        android:id="@+id/etv_profileSettingBirth"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="  2000/00/00"
        android:inputType="textPersonName"
        android:paddingEnd="12dp"
        android:textColorHint="#C8C4C4"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/tv_profileSettingText2"
        app:layout_constraintTop_toBottomOf="@+id/tv_insertPictureExplain2"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/tv_profileSettingText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진을 제외한 기본정보는 가입 후 변경이 불가능합니다."
        android:textColor="#121111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />

    <Button
        android:id="@+id/btn_moveToInterestSetting"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="#C8C4C4"
        android:text="확인"
        android:textColor="#F6F4F4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profileSettingText5"
        app:layout_constraintVertical_bias="0.466" />

    <ImageView
        android:id="@+id/img_profileSettingImage"
        android:layout_width="124dp"
        android:layout_height="120dp"
        android:background="@drawable/imgbutton_circle"
        android:clipToOutline="true"
        android:elevation="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tv_insertPictureExplain1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814" />

    <Button
        android:id="@+id/btn_profileSettingMale"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_medium"
        android:text="남"
        app:layout_constraintBottom_toTopOf="@+id/tv_profileSettingText5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.374"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etv_profileSettingBirth"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/btn_profileSettingFemale"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded_medium"
        android:text="여"
        app:layout_constraintBottom_toTopOf="@+id/tv_profileSettingText5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etv_profileSettingBirth"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/btn_changeImg"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_img_add"
        android:includeFontPadding="false"
        android:text="+"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_insertPictureExplain1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:text="+"
        android:textColor="#707070"
        android:textSize="50dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_profileSettingImage"
        app:layout_constraintEnd_toEndOf="@+id/img_profileSettingImage"
        app:layout_constraintStart_toStartOf="@+id/img_profileSettingImage"
        app:layout_constraintTop_toTopOf="@+id/img_profileSettingImage" />

</androidx.constraintlayout.widget.ConstraintLayout>