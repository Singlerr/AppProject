<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginVertical="0dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/friend_match_top_drawable"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/nscjk_medium"
            android:gravity="center"
            android:text="프렌즈를 찾았습니다!"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#efb75c"
            android:fontFamily="@font/nscjk_medium"
            android:gravity="center_horizontal|top"
            android:includeFontPadding="false"
            android:text="10초 이내로 결정하세요."
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe9c4"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/matchedImg"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nscjk_medium"
                android:gravity="left|bottom"
                android:includeFontPadding="false"
                android:text="메시지"
                android:textColor="@color/black"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nscjk_medium"
                android:gravity="left|bottom"
                android:includeFontPadding="false"
                android:text="메시지"
                android:textColor="@color/black"
                android:textSize="6pt" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#ffe9c4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/int_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_medium_interest_disabled"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/nscjk_regular"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="#000000" />

        <Button
            android:id="@+id/int_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_medium_interest_disabled"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/nscjk_regular"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="#000000" />

        <Button
            android:id="@+id/int_3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_medium_interest_disabled"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/nscjk_regular"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/friend_match_bottom_drawable"
        android:backgroundTint="#ffe9c4"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <Button
            android:id="@+id/deny"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_medium"
            android:fontFamily="@font/nscjk_bold"
            android:includeFontPadding="false"
            android:text="거절"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/accept"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_medium"
            android:fontFamily="@font/nscjk_bold"
            android:includeFontPadding="false"
            android:text="수락"
            android:textColor="@color/white"
            android:textSize="9pt" />
    </LinearLayout>
</LinearLayout>